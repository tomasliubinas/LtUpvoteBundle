<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Lt\UpvoteBundle\Repository\VoteAggregateRepository" name="Lt\UpvoteBundle\Entity\VoteAggregate">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="subjectType" type="string" column="subject_type" length="64"/>
    <field name="subjectId" type="string" column="subject_id" length="64"/>
    <field name="totalValue" type="integer" column="total_value"/>
    <field name="totalUpvotes" type="integer" column="total_upvotes"/>
    <field name="totalDownvotes" type="integer" column="total_downvotes"/>
    <field name="totalUserUpvotes" type="integer" column="total_user_upvotes"/>
    <field name="totalUserDownvotes" type="integer" column="total_user_downvotes"/>
    <one-to-many target-entity="Lt\UpvoteBundle\Entity\Vote" mapped-by="voteAggregate" field="votes"/>
  </entity>
</doctrine-mapping>
