<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Lt\UpvoteBundle\Repository\VoteAggregateRepository" name="Lt\UpvoteBundle\Entity\VoteAggregate">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="subjectId" type="string" column="subject_id" length="64"/>
    <field name="subjectType" type="string" column="subject_type" length="64"/>
    <field name="total" type="integer" column="total"/>
    <field name="upvotes" type="integer" column="upvotes"/>
    <field name="downvotes" type="integer" column="downvotes"/>
    <field name="userUpvotes" type="integer" column="user_upvotes"/>
    <field name="userDownvotes" type="integer" column="user_downvotes"/>
  </entity>
</doctrine-mapping>
